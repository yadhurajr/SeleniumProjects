<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Suite">
<listeners>
	<listener class-name="GenerateReport.Listeners"></listener>
</listeners>
	<parameter name="browser" value="chrome"></parameter>
  <test thread-count="5" name="Test">
    <classes>
	  <class name="TestScripts.ManageDeliveryBoyTest">
			<methods>
				<include name="verifyThatUserIsAbleToAddDeliveryBoyInformations"></include>
				<include name="verifyThatUserIsAbleToGetTheDetailsOfDeliveryBoyBySearchingUsingNameEmailAndPhoneNo"></include>
			</methods>
	  </class>

	  <class name="TestScripts.ManageOfferCodeTest">
			<methods>
				<include name="verifyThatUserIsAbleToAddOfferCodeInformationsInManageOfferCodeMoreInfoLinkAsFirstOrderUser"></include>
				<include name="verifyThatUserIsAbleToSearchOfferCodeDetailsOfFirstOrderUserBySearchingtheOfferCode"></include>
				<include name="verifyThatUserIsAbleToAddOfferCodeInManageOfferCodeMoreInfoLinkNotAsFirstOrderUser"></include>
				<include name="verifyThatUserIsAbleToSearchOfferCodeDetailsOfNotAFirstOrderUserBySearchingtheOfferCode"></include>
			</methods>
	  </class>

    </classes>
  </test> <!-- Test -->
</suite> <!-- Suite -->
